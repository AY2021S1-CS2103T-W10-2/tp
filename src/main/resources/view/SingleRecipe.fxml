<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="10" prefWidth="200" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5" />
            </padding>
            <ImageView fx:id="recipeImage" pickOnBounds="true">
            </ImageView>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5" />
                </padding>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" wrapText="true" />
            </HBox>
            <FlowPane fx:id="tags" />
            <Label fx:id="ingredients" styleClass="cell_small_label" text="\$ingredients" wrapText="true" minHeight="-Infinity">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5" />
                </padding>
            </Label>
            <Label fx:id="calories" styleClass="cell_small_label" text="\$calories" wrapText="true">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5" />
                </padding>
            </Label>
            <Label fx:id="instruction" styleClass="cell_small_label" text="\$instruction" wrapText="true" minHeight="-Infinity">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="5" />
                </padding>
            </Label>

        </VBox>

    </GridPane>
</HBox>
